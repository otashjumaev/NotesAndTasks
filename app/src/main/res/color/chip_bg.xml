<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 24% opacity -->
    <item android:color="@color/teal_500"  android:state_selected="true"/>
    <item  android:color="@color/teal_700" android:state_checked="true"/>
    <!-- 12% of 87% opacity -->
    <item android:alpha="0.10" android:color="@color/colorAccent" android:state_enabled="true"/>
    <item android:alpha="0.12" android:color="@color/colorPointer"/>

</selector>